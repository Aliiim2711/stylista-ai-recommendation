<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Order ID -->
    <TextView
        android:id="@+id/textOrderId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Order #12345"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Order Date -->
    <TextView
        android:id="@+id/textOrderDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Date: 2025-04-13"
        android:textSize="14sp"
        android:textColor="#555555"
        app:layout_constraintTop_toBottomOf="@id/textOrderId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Order Total -->
    <TextView
        android:id="@+id/textOrderTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: $120.50"
        android:textSize="14sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/textOrderDate"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Status -->
    <TextView
        android:id="@+id/textOrderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Confirmed"
        android:textSize="14sp"
        android:textColor="#4CAF50"
        app:layout_constraintTop_toBottomOf="@id/textOrderDate"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/textOrderStatus"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
