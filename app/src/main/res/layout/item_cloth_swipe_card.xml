<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main clothing image -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageCloth"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_shadow_bg"
        android:src="@drawable/sample_cloth"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Brand badge in top-left corner -->
    <TextView
        android:id="@+id/tvBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/brand_badge_background"
        android:padding="8dp"
        android:text="Nike"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="@id/imageCloth"
        app:layout_constraintStart_toStartOf="@id/imageCloth" />

    <!-- Info overlay at bottom -->
    <LinearLayout
        android:id="@+id/infoOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/info_overlay_background"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="@id/imageCloth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Category and Name -->
        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Premium Blue Hoodie"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Category -->
        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hoodies"
            android:textColor="#E0E0E0"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <!-- Price -->
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$79.99"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>