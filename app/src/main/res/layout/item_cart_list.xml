<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/imageClothContainer"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#E7E7E7"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageCloth"
            android:layout_width="80dp"
            android:layout_height="100dp"
            tools:src="@drawable/sample_cloth" />
    </androidx.cardview.widget.CardView>

<!--    <androidx.constraintlayout.widget.Guideline-->
<!--        android:id="@+id/gl_h50"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:orientation="horizontal"-->
<!--        app:layout_constraintGuide_percent="0.5" />-->

    <TextView
        android:id="@+id/tvClothName"
        style="@style/clothName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageClothContainer"
        tools:text="Tshrt" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff7E7D7D"
        app:layout_constraintStart_toStartOf="@id/tvClothName"
        app:layout_constraintTop_toBottomOf="@id/tvClothName"
        app:layout_constraintBottom_toTopOf="@id/tvQuantity"
        tools:text="$100" />
    <TextView
        android:id="@+id/tvQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff7E7D7D"
        android:text="@string/quantity"
        app:layout_constraintStart_toStartOf="@id/tvClothName"
        app:layout_constraintTop_toBottomOf="@id/tvPrice"
        app:layout_constraintBottom_toTopOf="@id/tvItemTotalPrice"
        tools:text="Quantity: 2" />
    <TextView
        android:id="@+id/tvItemTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff7E7D7D"
        android:text="@string/item_total_price"
        app:layout_constraintStart_toStartOf="@id/tvClothName"
        app:layout_constraintTop_toBottomOf="@id/tvQuantity"
        app:layout_constraintBaseline_toBottomOf="parent"
        tools:text="Item Total Price: $200" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@color/transparent"
        android:src="@drawable/ic_delete"
        android:tint="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvPrice" />


</androidx.constraintlayout.widget.ConstraintLayout>